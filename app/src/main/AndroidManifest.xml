<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="karpes_dev.trilogy_pazzle">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".version2.activitys.App"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme"
        android:largeHeap="true"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".version2.activitys.SplashActivity2"

            android:screenOrientation="portrait">
            <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".version2.activitys.CategoryActivity" />
        <activity android:name=".version2.activitys.ImagesActivity" />

        <activity android:name=".version1.activitys.FigureColoringActivity" android:screenOrientation="portrait"/>
        <activity android:name=".version1.activitys.SettingActivity" />
        <activity android:name=".version1.activitys.InstructionActivity" />
        <activity android:name=".version1.activitys.Privacy"/>

    </application>
</manifest>
