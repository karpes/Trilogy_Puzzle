<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:foregroundGravity">fill_vertical</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="btn_end" parent="@android:style/Widget.Holo.Button">
        <item name="android:layout_width">295dp</item>
        <item name="android:layout_height">81dp</item>
        <item name="android:layout_marginBottom">95dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="background">@color/color</item>
        <item name="android:onClick">show</item>
        <item name="android:text">@string/end</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
